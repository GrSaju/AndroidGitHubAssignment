<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/tvRepositoryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/repositories"
        android:textAllCaps="true"
        android:fontFamily="@font/manrope_bold"
        android:textColor="@color/btn_txt_color"
        android:textSize="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"/>

    <!--Fab-->
    <LinearLayout
        android:id="@+id/llBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabAddRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            app:icon="@drawable/baseline_add_24"
            app:iconTint="@color/background"
            android:text="@string/add_repository"
            android:textColor="@color/background"
            android:fontFamily="@font/manrope_regular"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:rippleColor="@color/btn_txt_color"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        android:progressDrawable="@drawable/custom_progress_bg" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rrRepositoryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottomLayout"
        android:layout_below="@+id/tvRepositoryLabel"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/tvNoRepositoryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Rpositories found"
        android:fontFamily="@font/manrope_bold"
        android:visibility="gone"
        android:textColor="@color/pale_dark_blue"
        android:textSize="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_26sdp"
        android:gravity="center"/>

</RelativeLayout>