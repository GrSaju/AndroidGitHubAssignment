<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvRepositoryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/repositories"
        android:fontFamily="@font/manrope_bold"
        android:textColor="@color/pale_dark_blue"
        android:textSize="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"/>

    <!--Fab-->
    <LinearLayout
        android:id="@+id/llBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_repository"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/pale_dark_blue"
            android:gravity="end"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/baseline_add_24"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:rippleColor="@color/navy_blue"
            android:contentDescription="@string/add_repository" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rrRepositoryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottomLayout"
        android:layout_below="@+id/tvRepositoryLabel"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="0dp" />

</RelativeLayout>